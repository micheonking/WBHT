@if(!is("user.agent", "ie8")) {
  input[type="checkbox"] {
    display: none;
  }

  input[type="checkbox"] + label {
    display:inline-block;
    margin:-1px 4px 0 0;
    vertical-align: middle;
    gwt-sprite: "unchecked";
    cursor: pointer;
    padding: PADDING;
  }

  input[type="checkbox"]:checked + label {
    gwt-sprite: "checked";
  }
}